---
import './hero.css';
import Boton from '../atoms/Boton.astro';
---

<section class="hero">
	<div class="hero__container">
		<div class="text__content">
			<h1 class="hero__title color__gradiente">Germán Paladino Finck</h1>
			<p class="hero__text">
				Desarrollador capacitado para crear sitios web atractivos y
				funcionales con todo tipo de herramientas y nuevas teconologías.
			</p>
			<Boton  href="#skills" texto="Quiero saber más" />
			<Boton  href="#contact" texto="Contáctame" />
		</div>
		<img
			class="hero__img"
			src="/img/german-pala.jpg"
			alt="german"
			width="384"
			height="384"
		/>
	</div>
</section>
