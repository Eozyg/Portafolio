---
import Title from "../components/atoms/Title.astro";
import { getCollection } from 'astro:content';

const posts = (await getCollection('blog')).sort(
(a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf()
);

---
<section id="contact" class="flex flex-col items-center w-full h-full md:max-w-full  justify-center flex-wrap px-4">
  <Title contenido="Contacto" margin="2rem"/>
<div class="form_container">
    <form action="https://formsubmit.co/ger.adrogue@gmail.com" method="POST" class="contact-form" id="contact-form">
        <div class="form-group">
            <label for="name">Nombre</label>
            <input type="text" id="name" placeholder="Ingresa tu nombre" name="name" required>
        </div>
        <div class="form-group">
            <label for="email">Email</label>
            <input type="email" id="email" placeholder="Ingresa tu email" name="email" required>  
        </div>
        <div class="form-group">
            <label for="phone">Teléfono</label>
            <input type="tel" id ="phone" placeholder="Ingresa tu número de teléfono" name="phone" required>
        </div>
        <div class="form-group">
            <label for="message">Mensaje</label>
            <textarea id="message" placeholder="Dejame tu mensaje" name="message" required rows="4"></textarea>
        </div>
        <div class="button-container">
            <button type="submit" class="primary button" id="submit-btn">Enviar</button>
            <input type="hidden" name="_captcha" value="false">
        </div>
</form>
</div>

<!-- Modal de éxito -->
<div id="success-modal" class="modal">
    <div class="modal-content">
        <iconify-icon icon="line-md:email-opened-twotone" width="60" height="60" style="color: var(--primary-70)"></iconify-icon>
        <h3>¡Mensaje enviado!</h3>
        <p>Gracias por contactarme. Te responderé lo antes posible.</p>
        <button id="close-modal" class="primary button">Cerrar</button>
    </div>
</div>
</section>
<style>
    .form_container {
        width: 100%;
        max-width: 800px;
        margin: 0 auto;
        padding: 2rem;
    }

    .contact-form {
        display: grid;
        grid-template-columns: 1fr;
        gap: 2rem;
    }

    @media (min-width: 768px) {
        .contact-form {
            grid-template-columns: 1fr 1fr;
        }
        .contact-form .form-group:nth-last-child(2) {
            grid-column: 1 / -1;
        }
        .button-container {
            grid-column: 1 / -1;
            display: flex;
            justify-content: center;
        }
    }

    .form-group {
        display: flex;
        flex-direction: column;
        gap: 0.5rem;
    }

    label {
        font-size: var(--text-large);
        font-weight: 500;
        color: var(--primary-90);
    }

    input, textarea {
        padding: 1.2rem;
        border-radius: 0.5rem;
        border: 1px solid var(--primary-40);
        background-color: var(--primary-10);
        color: var(--primary-90);
        font-size: var(--text-large);
        outline: none;
        transition: border-color 0.3s ease;
        font-family: inherit;
    }

    input::placeholder, textarea::placeholder {
        color: var(--primary-60);
        opacity: 0.7;
    }

    input:focus, textarea:focus {
        border-color: var(--primary-80);
        background-color: var(--primary-20);
    }

    textarea {
        resize: vertical;
        min-height: 120px;
    }

    .button {
        display: flex;
        justify-content: center;
        align-items: center;
        padding: 1.1rem 2.2rem;
        background: var(--primary);
        border: none;
        border-radius: 100px;
        font-size: var(--text-x-large);
        transition: 0.35s opacity;
        color: var(--primary-90);
        cursor: pointer;
        width: auto;
        min-width: 150px;
        font-family: inherit;
    }

    .button:hover {
        opacity: 0.7;
    }

    .button:active {
        opacity: 0.5;
    }

    .button:disabled {
        opacity: 0.5;
        cursor: not-allowed;
    }

    /* Estilos del Modal */
    .modal {
        display: none;
        position: fixed;
        z-index: 1000;
        left: 0;
        top: 0;
        width: 100%;
        height: 100%;
        background-color: rgba(25, 2, 48, 0.8);
        backdrop-filter: blur(5px);
        align-items: center;
        justify-content: center;
    }

    .modal-content {
        background-color: var(--primary-10);
        border: 2px solid var(--primary-50);
        padding: 3rem;
        border-radius: 1.5rem;
        text-align: center;
        max-width: 400px;
        width: 90%;
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.5);
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: 1.5rem;
        animation: modalFadeIn 0.3s ease-out;
    }

    .modal-content h3 {
        font-size: 2.4rem;
        color: var(--primary-90);
        margin: 0;
    }

    .modal-content p {
        font-size: 1.6rem;
        color: var(--primary-80);
        margin: 0;
    }

    @keyframes modalFadeIn {
        from {
            opacity: 0;
            transform: translateY(-20px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }
</style>
<script>
    const form = document.getElementById('contact-form') as HTMLFormElement;
    const modal = document.getElementById('success-modal');
    const closeBtn = document.getElementById('close-modal');
    const submitBtn = document.getElementById('submit-btn') as HTMLButtonElement;

    form?.addEventListener('submit', async (e) => {
        e.preventDefault();
        
        if (submitBtn) {
            submitBtn.disabled = true;
            submitBtn.innerText = 'Enviando...';
        }

        const formData = new FormData(form);
        const action = form.action;

        try {
            const response = await fetch(action, {
                method: 'POST',
                body: formData,
                headers: {
                    'Accept': 'application/json'
                }
            });

            if (response.ok) {
                if (modal) modal.style.display = 'flex';
                form.reset();
            } else {
                alert('Hubo un error al enviar el formulario. Por favor, intenta de nuevo.');
            }
        } catch (error) {
            console.error('Error:', error);
            alert('Hubo un error al enviar el formulario. Por favor, intenta de nuevo.');
        } finally {
            if (submitBtn) {
                submitBtn.disabled = false;
                submitBtn.innerText = 'Enviar';
            }
        }
    });

    closeBtn?.addEventListener('click', () => {
        if (modal) modal.style.display = 'none';
    });

    // Cerrar modal al hacer clic fuera
    window.addEventListener('click', (e) => {
        if (e.target === modal) {
            if (modal) modal.style.display = 'none';
        }
    });
</script>