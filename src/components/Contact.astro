---
import Title from "../components/atoms/Title.astro";
import { getCollection } from 'astro:content';

const posts = (await getCollection('blog')).sort(
(a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf()
);

---
<section id="contact" class="flex flex-col items-center w-full h-full md:max-w-full  justify-center flex-wrap px-4">
  <Title contenido="Contacto" margin="2rem"/>
<div class="form_container">
    <form action="https://formspree.io/f/xnqzrqel" method="POST" class="contact-form">
        <div class="form-group">
            <label for="name">Nombre</label>
            <input type="text" id="name" placeholder="Ingresa tu nombre" name="name" required>
        </div>
        <div class="form-group">
            <label for="email">Email</label>
            <input type="email" id="email" placeholder="Ingresa tu email" name="email" required>  
        </div>
        <div class="form-group">
            <label for="phone">Teléfono</label>
            <input type="tel" id ="phone" placeholder="Ingresa tu número de teléfono" name="phone" required>
        </div>
        <div class="form-group">
            <label for="message">Mensaje</label>
            <textarea id="message" placeholder="Ingresa tu mensaje" name="message" required rows="4"></textarea>
        </div>
        <div class="button-container">
            <button type="submit" class="primary button">Enviar</button>
        </div>
</form>
</div>
</section>
<style>
    .form_container {
        width: 100%;
        max-width: 800px;
        margin: 0 auto;
        padding: 2rem;
    }

    .contact-form {
        display: grid;
        grid-template-columns: 1fr;
        gap: 2rem;
    }

    @media (min-width: 768px) {
        .contact-form {
            grid-template-columns: 1fr 1fr;
        }
        .contact-form .form-group:nth-last-child(2) {
            grid-column: 1 / -1;
        }
        .button-container {
            grid-column: 1 / -1;
            display: flex;
            justify-content: center;
        }
    }

    .form-group {
        display: flex;
        flex-direction: column;
        gap: 0.5rem;
    }

    label {
        font-size: var(--text-large);
        font-weight: 500;
        color: var(--primary-90);
    }

    input, textarea {
        padding: 1.2rem;
        border-radius: 0.5rem;
        border: 1px solid var(--primary-40);
        background-color: var(--primary-10);
        color: var(--primary-90);
        font-size: var(--text-large);
        outline: none;
        transition: border-color 0.3s ease;
        font-family: inherit;
    }

    input::placeholder, textarea::placeholder {
        color: var(--primary-60);
        opacity: 0.7;
    }

    input:focus, textarea:focus {
        border-color: var(--primary-80);
        background-color: var(--primary-20);
    }

    textarea {
        resize: vertical;
        min-height: 120px;
    }

    .button {
        display: flex;
        justify-content: center;
        align-items: center;
        padding: 1.1rem 2.2rem;
        background: var(--primary);
        border: none;
        border-radius: 100px;
        font-size: var(--text-x-large);
        transition: 0.35s opacity;
        color: var(--primary-90);
        cursor: pointer;
        width: auto;
        min-width: 150px;
        font-family: inherit;
    }

    .button:hover {
        opacity: 0.7;
    }

    .button:active {
        opacity: 0.5;
    }
</style>